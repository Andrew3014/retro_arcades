@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_WITH_LEGEND()

Person(jugador, "Jugador", "Usuario que juega en el navegador")

System_Boundary(webapp, "Retro Arcade") {
  System(web, "Retro Arcade (sitio estático)", "HTML / CSS / JavaScript - múltiples juegos en canvas")
}

System_Ext(servicioRankings, "Servicio de Rankings (opcional)", "API serverless o servicio externo para puntuaciones globales")

Rel(jugador, web, "Juega / interactúa con")
Rel(web, servicioRankings, "Envía puntuaciones / Obtiene listas top", "HTTPS", "opcional")

@enduml
