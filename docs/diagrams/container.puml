@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

LAYOUT_WITH_LEGEND()

Person(jugador, "Jugador", "Usuario que juega en el navegador")

System_Boundary(webapp, "Retro Arcade") {
  Container(landing, "Landing Estática", "HTML/CSS/JS", "Página principal con canvases y controles")
  Container(motorJuegos, "Motor de Juegos (scripts.js)", "JavaScript", "Contiene la lógica de juegos, partículas y control de UI")
  Container(estilos, "Estilos (styles.css)", "CSS", "Estilos y temas (oscuro/claro)")
  Container(documentacion, "Docs (docs/)", "Markdown/Assets", "Documentación y diagramas en el repositorio")
}

Container_Ext(almacenamientoLocal, "Almacenamiento Local", "Browser localStorage", "Persistencia de ajustes, puntuaciones y perfiles")
Container_Ext(servicioRankings, "Servicio de Rankings (opcional)", "REST API / Serverless", "Almacena puntuaciones globales")
Container_Ext(clienteRankings, "Cliente de Rankings (opcional)", "JavaScript / Fetch client", "Cliente HTTP opcional para enviar/recuperar puntuaciones")

Rel(jugador, landing, "Navega y selecciona juegos", "HTTPS")
Rel(landing, motorJuegos, "Invoca acciones de juego (start/stop)")
Rel(motorJuegos, almacenamientoLocal, "Lee/Escribe puntuaciones, ajustes y perfiles")
Rel(motorJuegos, clienteRankings, "Envía/recupera listas top", "HTTPS", "opcional")
Rel(clienteRankings, servicioRankings, "HTTP/HTTPS")

@enduml
